---
interface Props {
  title?: string;
  description?: string;
  ogpImage?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.url);
const defaultOgpImageURL = new URL("/ogp/default.png", Astro.url);

const {
  title = `tunamaguro's blog`,
  description = "tunamaguro's website",
  ogpImage = defaultOgpImageURL.toString(),
} = Astro.props;
---

<!-- global meta  -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<meta name="generator" content={Astro.generator} />
<link rel="icon" sizes="16x16" href="/favicon.ico" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="manifest" href="/site.webmanifest" />

<link rel="canonical" href={canonicalURL} />

<!-- primary meta -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- The Open Graph protocol meta -->
<meta property="og:title" content={title} />
<meta property="og:url" content={Astro.url} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogpImage} />
<meta property="og:locale" content="ja-JP" />

<!-- Twitter meta -->
<meta name="twitter:card" content="large" />
